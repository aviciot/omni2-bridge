# =============================================================================
# MCP Auth Service - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://auth_service:auth_service@postgres:5432/omni?options=-c%20search_path=auth_service

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-256-bit-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=604800

# Service Configuration
PORT=8080
LOG_LEVEL=INFO
DEFAULT_ROLE=viewer

# Rate Limiting
RATE_LIMIT_WINDOW=3600

# Caching Configuration
CACHE_USER_TTL=300
CACHE_ROLE_TTL=600

# Security Settings
ADMIN_API_KEY=admin-key-32-chars-random-string-change-this

# Monitoring
ENABLE_METRICS=true
