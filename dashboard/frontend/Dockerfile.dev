# =============================================================================
# Development Dockerfile for Next.js 14 Frontend
# =============================================================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install

# Copy source code
COPY . .

# Remove .next folder to force clean build
RUN rm -rf .next

EXPOSE 3000

ENV NEXT_TELEMETRY_DISABLED=1

CMD ["npm", "run", "dev"]
